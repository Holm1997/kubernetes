global_defs {
    enable_script_security
    script_user nobody
}

vrrp_script chk_haproxy {
        script "/usr/bin/systemctl is-active --quiet haproxy"
        interval 2
        weight 2
}

vrrp_instance VI_1 {
{% for interface in ansible_facts['interfaces'] %}
{% if interface != 'lo' %}
	interface {{ interface }}
{% endif %}
{% endfor %}
{% if ansible_facts['hostname'] == master_hostname %}
	state MASTER
{% else %}
	state BACKUP
{% endif %}
	
	virtual_router_id 51
{% if ansible_facts['hostname'] == master_hostname %}
        priority 101
{% else %}
        priority 100
{% endif %}
	
	virtual_ipaddress {
		{{ vip_address }}
	}

	track_script {
		chk_haproxy
	}
}
